<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
	default-init-method="init" default-destroy-method="destroy"> <!-- init and destroy for all the beans -->

	<bean id="helloBean" class="com.practise.HelloBean" >
		<property name="id" value="89" />
		<constructor-arg value="Vaishali"></constructor-arg>
		<constructor-arg value="Gupta"></constructor-arg>
	</bean>
</beans>