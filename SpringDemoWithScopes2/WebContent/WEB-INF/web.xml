<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<display-name>SpringDemoWithScopes2</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>Request Scope Servlet</servlet-name>
		<servlet-class>com.practise.bean.CheckHttpReqScope</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Request Scope Servlet</servlet-name>
		<url-pattern>/servReqScope</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Session Scope Servlet</servlet-name>
		<servlet-class>com.practise.bean.CheckHttpReqScope</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Session Scope Servlet</servlet-name>
		<url-pattern>/servSessionScope</url-pattern>
	</servlet-mapping>
</web-app>